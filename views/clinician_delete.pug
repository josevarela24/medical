extends layout

block content

  h1 Delete Clinician: #{clinician.name}
  
  if clinician_records.length
  
    p #[strong Delete the following records before attempting to delete this clinician.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Records
    
      dl
      each record in clinician_records
        dt 
          a(href=record.url) #{record.number}
        dd #{record.provider}

  else
    p Do you really want to delete this clinician?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=clinician._id )

      button.btn.btn-primary(type='submit') Delete