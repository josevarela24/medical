extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Clinician:
      input#name.form-control(type='text', placeholder='Dr. Love' name='name' value=(undefined===clinician ? '' : clinician.name), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg